<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="@dimen/padding_10"
    android:background="@drawable/bg_boder_upload_file"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_toLeftOf="@id/close_iv"
        android:id="@+id/layoutChooseFile"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_insert_drive_file_24"
            android:id="@+id/attachment_iv"
            android:layout_width="@dimen/v2_margin50"
            android:layout_height="@dimen/v2_margin50"
            app:tint="@color/green_main">
        </ImageView>

        <LinearLayout
            android:layout_marginLeft="@dimen/padding_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_file_tv"
                android:textSize="@dimen/padding_14"
                android:text="Document"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_marginTop="@dimen/v2_margin5"
                android:id="@+id/size_tv"
                android:textSize="@dimen/padding_14"
                android:text="192 kb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_baseline_close_24"
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/red">
    </ImageView>
</RelativeLayout>