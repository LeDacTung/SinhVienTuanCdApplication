<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="@dimen/padding_10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/type_tv"
        android:textColor="@color/green_main"
        android:text="@string/student"
        style="@style/Text.Logo"
        android:textSize="@dimen/padding_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@color/green_main"
            android:id="@+id/image"
            android:layout_gravity="center"
            android:layout_width="@dimen/v2_size80"
            android:layout_height="@dimen/v2_size80">
        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_marginLeft="@dimen/padding_15"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/padding_15"
                android:text="Title"
                android:textColor="@color/black"
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_marginTop="@dimen/v2_margin5"
                android:textSize="@dimen/padding_14"
                android:text="CT2"
                android:textColor="@color/black"
                android:id="@+id/class_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_marginTop="@dimen/v2_margin5"
                android:textSize="@dimen/padding_14"
                android:text="gmail"
                android:id="@+id/gmail_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_marginTop="@dimen/v2_margin5"
                android:textSize="@dimen/padding_14"
                android:text="+840561465"
                android:id="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/padding_10"
        android:background="@color/grey_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp">
    </View>
</LinearLayout>